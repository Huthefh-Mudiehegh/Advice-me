<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="@dimen/_8sdp"

    android:layout_marginTop="@dimen/_18sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/advice_title_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/advice_content_TV"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"

            android:letterSpacing="0.03"

            android:lineSpacingExtra="8sp"
            android:maxLines="1"
            android:text="حديث شريف"
            android:textColor="@color/text_color_onSecondary"
            android:textSize="16sp"
            android:textStyle="normal"

            />

        <ImageButton
            android:id="@+id/adviceList_favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"


            android:layout_marginLeft="@dimen/_5sdp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_favorite_outlined" />


        <TextView
            android:id="@+id/advice_content_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_below="@id/adviceList_favorite_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"

            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"

            android:lineSpacingExtra="8sp"
            android:maxLines="3"
            android:text="نص وهمي لإختبار تطبيق التصميم نص وهمي لإختبار تطبيق التصميملإختبار تطبيق التصميلإختبار تطبيق التصميلإختبار تطبيق التصميلإختبار تطبيق التصميلإختبار تطبيق التصميلإختبار تطبيق التصمي تطبيق التصميتطبيق التصميتطبيق التصميتطبيق التصميتطبيق التصمي"
            android:textColor="@color/text_color_onSecondary"
            android:textSize="16sp"
            android:textStyle="normal"

            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>


